{
  "name": "privacy-evaluation-platform",
  "version": "1.0.0",
  "description": "Privacy-Protected Evaluation Platform Based on Homomorphic Encryption",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "coverage": "hardhat coverage",
    "deploy": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "verify": "hardhat run scripts/verify.js --network sepolia",
    "interact": "hardhat run scripts/interact.js --network sepolia",
    "simulate": "hardhat run scripts/simulate.js --network sepolia",
    "node": "hardhat node",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "lint": "npm run lint:js && npm run lint:sol && npm run prettier:check",
    "lint:js": "eslint '**/*.js'",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "prettier:check": "prettier --check '**/*.{js,json,sol,md}'",
    "prettier:write": "prettier --write '**/*.{js,json,sol,md}'",
    "format": "npm run prettier:write",
    "security": "node scripts/security-check.js",
    "performance": "node scripts/performance-check.js",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "prepare": "husky install || true",
    "precommit": "npm run lint && npm test",
    "prepush": "npm run coverage && npm run audit"
  },
  "keywords": ["fhe", "blockchain", "zama", "privacy", "evaluation"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.0.0",
    "dotenv": "^16.4.0",
    "chai": "^4.3.10",
    "solhint": "^5.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.0"
  },
  "dependencies": {
    "@fhevm/solidity": "latest"
  }
}
