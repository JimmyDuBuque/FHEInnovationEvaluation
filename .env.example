# Environment Configuration for Privacy Evaluation Platform
# Copy this file to .env and fill in your values
# WARNING: Never commit the .env file to version control

# ============================================
# Deployment Configuration
# ============================================

# Your wallet private key for deployment
# Get this from MetaMask: Settings > Security & Privacy > Show Private Key
# IMPORTANT: Use a dedicated deployment wallet, not your main wallet
# Format: 0x followed by 64 hexadecimal characters
PRIVATE_KEY=your_private_key_here

# ============================================
# Security Configuration
# ============================================

# Pauser Role Configuration
# Address that can pause/unpause contract operations in emergency
PAUSER_ADDRESS=

# Emergency Contact
# Address to notify in case of security incidents
EMERGENCY_CONTACT=

# Rate Limiting (optional)
# Maximum transactions per address per hour
MAX_TX_PER_HOUR=100

# DoS Protection
# Minimum time between transactions (seconds)
MIN_TX_INTERVAL=1

# Access Control
# Enable strict access control mode
STRICT_ACCESS_CONTROL=true

# ============================================
# Network Configuration
# ============================================

# Sepolia Testnet RPC URL
# Default provider (free, public):
SEPOLIA_RPC_URL=https://eth-sepolia.public.blastapi.io

# Alternative providers (require API keys):
# Infura: https://sepolia.infura.io/v3/YOUR-PROJECT-ID
# Alchemy: https://eth-sepolia.g.alchemy.com/v2/YOUR-API-KEY
# Ankr: https://rpc.ankr.com/eth_sepolia

# Mainnet RPC URL (for future mainnet deployment)
# MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# ============================================
# Etherscan Configuration
# ============================================

# Etherscan API Key for contract verification
# Get your key at: https://etherscan.io/myapikey
# Register at: https://etherscan.io/register
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ============================================
# Gas Reporting Configuration (Optional)
# ============================================

# Enable gas reporting during tests (true/false)
REPORT_GAS=false

# CoinMarketCap API key for USD gas cost estimation
# Get your key at: https://coinmarketcap.com/api/
# Leave empty if you don't want USD conversion
COINMARKETCAP_API_KEY=

# Output file for gas report (optional)
# Leave empty to print to console
# GAS_REPORT_FILE=gas-report.txt

# Gas Price for estimates (in gwei)
GAS_PRICE=30

# Gas Limit Thresholds (for monitoring)
DEPLOYMENT_GAS_LIMIT=3000000
TRANSACTION_GAS_LIMIT=500000

# ============================================
# Performance Optimization
# ============================================

# Solidity Optimizer Settings
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=800

# Compilation Cache
USE_COMPILATION_CACHE=true

# Type Chain Generation
GENERATE_TYPINGS=false

# ============================================
# Monitoring & Alerts
# ============================================

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# Alert on high gas usage (true/false)
ALERT_HIGH_GAS=false

# Gas threshold for alerts (in wei)
GAS_ALERT_THRESHOLD=1000000

# Webhook URL for alerts (optional)
ALERT_WEBHOOK_URL=

# ============================================
# Additional Configuration
# ============================================

# Block explorer URL (optional, for custom networks)
# BLOCK_EXPLORER_URL=https://sepolia.etherscan.io

# Deployment confirmation blocks (optional)
# CONFIRMATIONS=2

# Gas price multiplier (optional, 1.0 = normal)
# GAS_PRICE_MULTIPLIER=1.0

# ============================================
# Development Configuration
# ============================================

# Enable verbose logging (true/false)
# VERBOSE=false

# Local network port (for Hardhat node)
# LOCAL_PORT=8545

# ============================================
# Security Notes
# ============================================

# 1. NEVER commit this file with real values
# 2. Use a dedicated wallet for deployment
# 3. Keep minimal funds in deployment wallet
# 4. Backup your private key securely offline
# 5. Use hardware wallet for mainnet deployments
# 6. Rotate keys periodically
# 7. Monitor your wallet for suspicious activity

# ============================================
# Quick Start
# ============================================

# 1. Copy this file:
#    cp .env.example .env

# 2. Get Sepolia test ETH:
#    https://sepoliafaucet.com/

# 3. Export your private key from MetaMask:
#    Settings > Security & Privacy > Show Private Key

# 4. Get Etherscan API key:
#    https://etherscan.io/myapikey

# 5. Update values above

# 6. Test configuration:
#    npm run compile

# 7. Deploy to testnet:
#    npm run deploy
